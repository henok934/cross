<style>
.responsive-table {
    width: 100%;
    max-width: 500px; /* Maximum width of the table */
    margin: 20px auto; /* Center the table */
    background-color: lightgray;
    border-collapse: collapse;
}

.responsive-table th,
.responsive-table td {
    padding: 10px; /* Increased padding for better spacing */
    text-align: center; /* Center align text */
}

.responsive-table th {
    background-color: green;
    color: white;
}

.responsive-table input {
    height: 35px; /* Increased height for better usability */
    width: 100%; /* Full width of the cell */
    text-align: center;
    color: blue;
    border-radius: 5px;
    border: 1px solid #ccc;
    font-weight: bold;
    padding: 5px; /* Added padding for better visuals */
}

.responsive-table button {
    height: 35px; /* Increased height for better usability */
    width: 100%; /* Full width of the cell */
    background-color: blue;
    color: brown;
    border-radius: 5px;
    border: 1px solid #ccc;
    font-weight: bold;
}

.error-message {
    color: red;
    display: none; /* Hide error message by default */
}

/* Media Query for Medium Screens */
@media (max-width: 900px) {
    .responsive-table {
        max-width: 90%; /* Increase table width on medium screens */
    }

    .responsive-table input, .responsive-table button {
        height: 30px; /* Adjust height for medium screens */
    }
}

/* Media Query for Smaller Screens */
@media (max-width: 600px) {
    .responsive-table {
        max-width: 100%; /* Full width on smaller screens */
    }

    .responsive-table th, .responsive-table td {
        padding: 5px; /* Reduce padding on smaller screens */
    }

    .responsive-table input, .responsive-table button {
        height: 28px; /* Adjust height for smaller screens */
    }
}
</style>

<table class="responsive-table">
    <thead>
        {% if error1 %}
        <div class="error">
            <h6 style="color: red;"><b>{{ error1 }}</b><span class="symbol">X</span></h6>
        </div>
        {% endif %}
        <tr>
            <th>No</th>
            <th>Plate No</th>
            <th>Side No</th>
            <th>No Seat</th>
            <th>New Side</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {% for bus in buses %}
        <tr>
            <td style="color: brown; text-align: center;">{{ forloop.counter }}</td>
            <td>
                <form action="#" method="POST" style="margin: 0;">
                    {% csrf_token %}
                    <input type="text" name="plate_no" value="{{ bus.plate_no }}" readonly>
            </td>
            <td>
                <input type="text" name="sideno" value="{{ bus.sideno }}" readonly>
            </td>
            <td>
                <input type="text" name="no_seats" value="{{ bus.no_seats }}">
            </td>
            <td>
                <input type="text" name="new_sideno" maxlength="4" oninput="this.value = this.value.replace(/[^0-9]/g, ''); validateside(this);" required>
                <div id="error-message-{{ forloop.counter }}" style="color: red; display: none;"></div>
            </td>
            <td>
                <button type="submit"><b style="color: red;">Change</b></button>
                </form>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<script>
function validateside(input) {
    var value = input.value.trim();
    var index = input.closest('tr').rowIndex; // Get row index
    var errorMessage = document.getElementById("error-message-" + index);
    
    if (isNaN(value)) {
        errorMessage.textContent = "Please enter a number for the sideno.";
        errorMessage.style.display = "block";
        input.setCustomValidity("Please enter a number.");
    } else if (value.length !== 4) {
        errorMessage.textContent = "Please enter a 4-digit sideno.";
        errorMessage.style.display = "block";
        input.setCustomValidity("Please enter a 4-digit number.");
    } else {
        errorMessage.style.display = "none";
        input.setCustomValidity("");
    }
}
</script>



