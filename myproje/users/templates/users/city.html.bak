<div class="form-group">
    <input type="text" class="form-control" id="mySelect" name="depcity" maxlength="15"
           oninput="validateCity(this); capitalizeFirstLetter(this);" required 
           style="text-align: center; height: 40px; line-height: 40px; padding: 10px 0; box-sizing: border-box; margin-top:-20px;" 
           placeholder=" ">
    <label class="floating-label" for="mySelect">City Name</label>
    <div id="error-message" style="color: red; display: none;">Please enter a valid city name (letters only)</div>
</div>

<style>
    .form-group {
        position: relative; /* Position relative for label positioning */
        margin: 20px 0; /* Space around the group */
    }

    .form-control {
        display: block; /* Ensure input is a block element */
        width: 100%; /* Full width for the input */
        height: 40px; /* Set height */
        padding: 10px 0; /* Padding for input */
        text-align: center; /* Center text and placeholder */
        border: 1px solid #ccc; /* Add border */
        border-radius: 4px; /* Rounded corners */
        transition: border-color 0.2s; /* Smooth border transition */
    }

    .form-control:focus {
        border-color: #007bff; /* Change border color on focus */
    }

    .floating-label {
        position: absolute; /* Position the label absolutely */
        left: 0;
        right: 0;
        top: 50%; /* Center vertically */
        transform: translateY(-50%); /* Adjust to center */
        text-align: center; /* Center the label text */
        transition: 0.2s ease all; /* Smooth transition */
        pointer-events: none; /* Prevent pointer events */
        color: #aaa; /* Grey color for label */
    }

    .form-control:focus + .floating-label,
    .form-control:not(:placeholder-shown) + .floating-label {
        top: -10px; /* Move the label up */
        font-size: 12px; /* Smaller font size when floating */
        color: #007bff; /* Change color when floating */
    }

    .form-control::placeholder {
        text-align: center; /* Center the placeholder text */
        opacity: 0; /* Initially hide the placeholder */
    }
</style>

<script>
function validateCity(input) {
    const value = input.value;
    const errorMessage = document.getElementById('error-message');

    // Trim spaces from the input value
    input.value = value.trim();

    // Check if input is empty or contains non-alphabetic characters
    if (input.value === "" || !/^[a-zA-Z\s]*$/.test(input.value)) {
        errorMessage.style.display = 'inline';
        input.value = ''; // Optionally clear the input
    } else {
        errorMessage.style.display = 'none';
    }
}

function capitalizeFirstLetter(input) {
    // Get the current value
    const value = input.value;

    // Capitalize the first letter and keep the rest as is
    if (value.length > 0) {
        input.value = value.charAt(0).toUpperCase() + value.slice(1);
    }
}
</script>




